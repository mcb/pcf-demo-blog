<% @posts.each do |post| %>
  <div class="post">
    <div class="title">
      <h2><%= link_to post.title, url_for(:posts, :show, :id => post.id) %></h2>
    </div>
    <div class="date">
    <%= time_ago_in_words(post.created_at || Time.now) + ' ago' %>
    </div>
    <div class="body">
    <%= simple_format(post.body) %>
    </div>
  </div>
<% end %>
